<% provide(:title,"Search") %>
<h2 class="main-heading text-center">Search the directory for a group or user</h2>
<div class="justify-content-center row">
  <div class="col-md-6 jumbotron">
    <%= form_for(@ldap_search, url: search_path) do |f| %>
      <%= render partial: 'error_messages', object: @ldap_search %>
      <%= f.label "Confirm your ldap password" %>
      <%= f.password_field :ldap_password, autocomplete: "off", class: "form-control form-group" %>
      <%= f.label "Group or User" %>
      <%= f.text_field :name, autofocus: true, class: "form-control form-group" %>
      <%= f.submit "Search", class: "btn btn-block btn-primary" %>
    <% end %>
  </div>
</div>
