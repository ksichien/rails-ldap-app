<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <%= link_to "Rails LDAP", root_path, id: "logo" %>
    </div>
    <nav>
      <ul class="nav navbar-nav">
        <li><%= link_to "Home", root_path %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            OpenLDAP <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "Add To Group", add_path %></li>
            <li><%= link_to "Create User", create_path %></li>
            <li><%= link_to "Update Password", update_password_path %></li>
            <li><%= link_to "Delete User", destroy_path %></li>
