<% provide(:title,"Change Password") %>
<div class="row">
  <h2>Change a user's password</h2>
  <div class="col-md-6 col-md-offset-3 jumbotron">
    <%= form_for(@ldapuser, url: update_path) do |f| %>
      <%= render 'shared/ldap_user_error_messages', object: @ldapuser %>
      <%= f.label "Confirm your ldap password" %>
      <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      <%= f.label "First Name" %>
      <%= f.text_field :fname, autofocus: true, class: 'form-control' %>
      <%= f.label "Last Name" %>
      <%= f.text_field :lname, class: 'form-control' %>
      <%= f.submit "Change password", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
