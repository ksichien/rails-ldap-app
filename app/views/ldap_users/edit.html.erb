<% provide(:title,"Change Password") %>
<h2 class="main-heading text-center">Change a user's password</h2>
<div class="justify-content-center row">
  <div class="col-md-6 jumbotron">
    <%= form_for(@ldap_user, url: update_user_path) do |f| %>
      <%= render partial: 'error_messages', object: @ldap_user %>
      <%= f.label "Confirm your ldap password" %>
      <%= f.password_field :ldap_password, autocomplete: "off", class: "form-control form-group" %>
      <%= f.label "First Name" %>
      <%= f.text_field :fname, autofocus: true, class: "form-control form-group" %>
      <%= f.label "Last Name" %>
      <%= f.text_field :lname, class: "form-control form-group" %>
      <%= f.submit "Change password", class: "btn btn-block btn-primary" %>
    <% end %>
  </div>
</div>
