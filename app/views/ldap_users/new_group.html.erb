<% provide(:title,"Create Group") %>
<div class="row">
  <h2>Create a new group</h2>
  <div class="col-md-6 col-md-offset-3 jumbotron">
    <%= form_for(@ldapuser, url: create_group_path) do |f| %>
      <%= render 'shared/ldap_user_error_messages', object: @ldapuser %>
      <%= f.label "Confirm your ldap password" %>
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      <%= f.label "Group Name" %>
      <%= f.text_field :group_name, autofocus: true, class: "form-control" %>
      <%= f.label "Group Members" %>
      <%= f.text_area :group_members, maxlength: 8192, rows: 10, class: "form-control" %>
      <%= f.submit "Create", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
