<% provide(:title,"Remove Group") %>
<div class="row">
  <h2>Remove a user from one or more groups.</h2>
  <div class="col-md-6 col-md-offset-3 jumbotron">
    <%= form_for(@ldapuser, url: remove_path) do |f| %>
      <%= f.label "First Name" %>
      <%= f.text_field :fname, class: 'form-control' %>
      <%= f.label "Last Name" %>
      <%= f.text_field :lname, class: 'form-control' %>
      <%= f.label "Group(s)" %>
      <%= f.text_area :dn, rows: 10, class: 'form-control' %>
      <%= f.submit "Remove", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
