<% provide(:title,"Remove Group") %>
<div class="row">
  <h2>Remove a user from multiple groups</h2>
  <div class="col-md-6 col-md-offset-3 jumbotron">
    <%= form_for(@ldapuser, url: remove_path) do |f| %>
      <%= render partial: 'error_messages', object: @ldapuser %>
      <%= f.label "Confirm your ldap password" %>
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      <%= f.label "First Name" %>
      <%= f.text_field :fname, autofocus: true, class: "form-control" %>
      <%= f.label "Last Name" %>
      <%= f.text_field :lname, class: "form-control" %>
      <%= f.label "Groups" %>
      <%= f.text_area :dn, maxlength: 8192, rows: 10, class: "form-control" %>
      <%= f.submit "Remove", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
