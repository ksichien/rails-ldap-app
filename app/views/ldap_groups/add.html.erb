<% provide(:title,"Multiple Add Group") %>
<div class="row">
  <h2>Add multiple users to a group</h2>
  <div class="col-md-6 col-md-offset-3 jumbotron">
    <%= form_for(@ldap_group, url: add_users_path) do |f| %>
      <%= render partial: 'error_messages', object: @ldap_group %>
      <%= f.label "Confirm your ldap password" %>
      <%= f.password_field :ldap_password, autocomplete: "off", class: "form-control" %>
      <%= f.label "Group" %>
      <%= f.text_field :name, autofocus: true, class: "form-control" %>
      <%= f.label "Users" %>
      <%= f.text_area :users, maxlength: 8192, rows: 10, class: "form-control" %>
      <%= f.submit "Add", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
