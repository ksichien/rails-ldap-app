<% if @ldap_group.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger" role="alert">
      The form contains <%= pluralize(@ldap_group.errors.count, "error") %>.
    </div>
    <ul>
    <% @ldap_group.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
