<% provide(:title,"Create Group") %>
<h2 class="main-heading text-center">Create a new group</h2>
<div class="justify-content-center row">
  <div class="col-md-6 jumbotron">
    <%= form_for(@ldap_group, url: create_group_path) do |f| %>
      <%= render partial: 'error_messages', object: @ldap_group %>
      <%= f.label "Confirm your ldap password" %>
      <%= f.password_field :ldap_password, autocomplete: "off", class: "form-control form-group" %>
      <%= f.label "Group Name" %>
      <%= f.text_field :name, autofocus: true, class: "form-control form-group" %>
      <%= f.label "Group Members" %>
      <%= f.text_area :users, maxlength: 8192, rows: 10, class: "form-control form-group" %>
      <%= f.submit "Create", class: "btn btn-block btn-primary" %>
    <% end %>
  </div>
</div>
